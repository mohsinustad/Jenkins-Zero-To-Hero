pipeline {
  agent any

  stages {
    stage('Verify Docker') {
      steps {
        // confirm the Docker CLI & daemon are accessible
        sh 'docker version'
      }
    }

    stage('Run Node in Docker') {
      agent {
        // spin up a node:16â€‘alpine container for this stage
        docker { image 'node:16-alpine' }
      }
      steps {
        // run your Node command inside the container
        sh 'node --version'
      }
    }
  }
}
